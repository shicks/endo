{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "lib": [
      "es2020",
      "dom",
    ],
    "incremental": true,
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "rootDirs": ["src", "test"],
    "paths": {
      "*": ["./node_modules/*"],
    },
  },
}
